
@{
    ViewBag.Title = "Healthrecord";
    Layout = "~/Views/Shared/_user_layout.cshtml";
}

<h2>Healthrecord</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group m-3 ">
        <lable class="fs-5">Enter Your User ID :</lable>
        <input type="text" class="form-control" placeholder="Enter Your Name..." style="border:1px solid black;" />
    </div>
    <div class="form-group m-3 ">
        <lable class="fs-5">Medical Condition  :</lable>
        <input type="text" class="form-control" placeholder="Enter Your Email..." style="border:1px solid black;" />
    </div>
    <div class="form-group m-3 ">
        <lable class="fs-5">Treatment running :</lable>
        <input type="text" class="form-control" placeholder="..." style="border:1px solid black;" />
    </div>
    <div class="form-group m-3 ">
        <lable class="fs-5">Medicines you are using :</lable>
        <textarea class="form-control" placeholder="list them..." rows="5" style="border:1px solid black;"></textarea>
    </div>
    <div class="form-group m-3 ">
        <lable class="fs-5">Surgical History  :</lable>
        <textarea class="form-control" placeholder="..." rows="5" style="border:1px solid black;"></textarea>
    </div>
    <div class="form-group m-3 ">
        <lable class="fs-5">Family Medical History :</lable>
        <textarea class="form-control" placeholder="List them..." rows="5" style="border:1px solid black;"></textarea>
    </div>
    <div class="form-group m-3 ">
        <h3>use select to identify the type of record and the upload the document lant list it according to it's type</h3>
        <lable class="fs-5">Upload all The reports   :</lable>
        <input type="file" class="form-control" placeholder="..." style="border:1px solid black;" />
    </div>
    <input type="submit" class="m-3 btn text-light" value="Send" />
</form>